@model IEnumerable<CandidateProject.ViewModels.CartonViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CartonNumber)
        </th>
        <th>
            Equipment Count
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CartonNumber)
        </td>
        <td>
            @item.EquipmentCount
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
            @Html.ActionLink("AddEquipment", "AddEquipment", new { id = item.Id }) |
            @Html.ActionLink("ViewCartonEquipment", "ViewCartonEquipment", new { id = item.Id }) |
            <!--<a href="#" onclick="removeAllItems(@item.Id)">Remove All Items</a>--> <!-- Remove All Items link -->
            @*@Html.ActionLink("RemoveAllCartonItems", "RemoveAllCartonItems", @item.Id) |*@
            @using (Html.BeginForm("RemoveAllCartonItems", "Carton", FormMethod.Post))
            {
                @Html.Hidden("cartonId", item.Id) <!-- Pass the carton ID -->
                <button type="submit" class="btn btn-danger">Remove All Items</button>
            }
        </td>
    </tr>
}

</table>
